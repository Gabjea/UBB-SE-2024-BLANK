<Window x:Class="client.EditPostPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Post" Height="300" Width="400">
    <Grid>
        <!-- Main Content Area -->
        <StackPanel Margin="10">
            <StackPanel x:Name="txtDescriptionPanel" Margin="0,0,0,20">
                <Label Content="Edit the description" FontWeight="Bold"/>
                <TextBox x:Name="txtDescription" Text="" TextWrapping="Wrap" Height="100" VerticalScrollBarVisibility="Auto" Margin="0,5,0,10"/>
            </StackPanel>

            <StackPanel x:Name="savePanel" Margin="0,0,0,20">
                <Button Content="Save Changes" Width="150" Height="40" Click="SaveChangesButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
