<Page x:Class="client.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Grid>
        <TextBlock Text="Social App" FontSize="24" HorizontalAlignment="Center" Margin="0,50,0,0"/>
        <StackPanel HorizontalAlignment="Center" Margin="0,100,0,0">
            <TextBox x:Name="UsernameTextBox" Text="Username" Width="200" Margin="0,10,0,10"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,10,0,10"/>
            <Button Content="Log in" Click="LoginButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Page>
